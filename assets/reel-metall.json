<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Metall | Luderbein</title>
  <meta name="description" content="Metallgravur: Schilder, Plaketten, Typenschilder & Tags. Preis kalkulieren oder direkt anfragen.">

  <link rel="stylesheet" href="/assets/style.css">
  <link rel="stylesheet" href="/assets/nav-dropdown.css">

  <!-- Reel-Styles (additiv, lokal für diese Seite) -->
  <style>
    .reel {
      display: flex;
      gap: 14px;
      overflow-x: auto;
      padding: 8px 2px 18px;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
    }
    .reel__item {
      flex: 0 0 280px;
      scroll-snap-align: start;
      border-radius: 16px;
      border: 1px solid rgba(64,62,65,.55);
      background: rgba(26,26,31,.72);
      box-shadow: var(--shadow);
      overflow: hidden;
      color: inherit;
      margin: 0;
    }
    .reel__img {
      display: block;
      width: 100%;
      height: 220px;
      object-fit: cover;
    }
    .reel__cap {
      padding: 10px 12px;
      color: var(--muted);
      font-size: .92rem;
      line-height: 1.35;
    }

    /* Varianten-Thumbs: bis Bild gesetzt ist, ausblenden (kein “broken image”) */
    .variantImg {
      display: none;
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .variantImg.is-ready { display: block; }
  </style>
</head>

<body>

  <!-- HEADER: 1:1 aus index.html -->
  <header>
    <div class="wrap nav">
      <a class="brand" href="/">
        <div class="logo" aria-hidden="true"></div>
        <div>
          <strong>Luderbein</strong><br>
          <span>Schwibbögen • Gravur • Sonderwünsche</span>
        </div>
      </a>

      <button class="navbtn" type="button" data-nav-toggle aria-expanded="false" aria-label="Menü öffnen">
        <span class="navicon"><span></span></span>
      </button>

      <nav class="menu" data-nav aria-label="Hauptmenü" data-open="0">
        <a href="/">Start</a>

        <div class="navdrop" data-navdrop>
          <button class="navdrop__sum" type="button" aria-haspopup="true" aria-expanded="false">
            Leistungen <span class="navdrop__chev" aria-hidden="true">▾</span>
          </button>

          <div class="navdrop__panel" role="menu" aria-label="Leistungen">
            <a href="/leistungen/schiefer/" role="menuitem">Schiefer</a>
            <a href="/leistungen/metall/" role="menuitem" aria-current="page">Metall</a>
            <a href="/leistungen/holz/" role="menuitem">Holz</a>
            <a href="/leistungen/acryl-schilder/" role="menuitem">Acryl</a>
            <a href="/kontakt/?p=Custom" role="menuitem">Custom</a>
            <div class="navdrop__sep" aria-hidden="true"></div>
            <a href="/tools/kalkulator/" role="menuitem">Kalkulator</a>
            <a href="/service/" role="menuitem">Downloads</a>
          </div>
        </div>

        <a href="/ueber/">Über</a>
        <a href="/kontakt/">Kontakt</a>
        <a href="/rechtliches/impressum.html">Impressum</a>
      </nav>
    </div>
  </header>

  <main class="wrap">
    <section class="hero">
      <h1>Metall</h1>
      <p class="lead">Robust, präzise, langlebig – ideal für Schilder, Plaketten, Typenschilder & Tags.</p>

      <div class="cta">
        <a class="btn" href="/tools/kalkulator/?t=metall">Preis kalkulieren</a>
        <a class="btn primary" href="/kontakt/?p=Metall">Anfrage senden</a>
      </div>
    </section>

    <section class="section">
      <h2>Varianten</h2>
      <p class="muted">Kurz & klar – Details klären wir dann im Kontakt.</p>

      <div class="products">
        <!-- Plaketten -->
        <article class="productcard">
          <div class="thumb">
            <img class="variantImg" data-variant-img="0" alt="Metall Plakette Beispiel" loading="lazy">
          </div>

          <div class="meta">
            <span class="price">ab 19,95 €</span> • <span>Plaketten</span> • <span>Gravur</span>
          </div>

          <h3>Plakette</h3>
          <p class="kicker">Namensschilder, Gedenkplatten, Beschriftungen – sauber & stabil.</p>

          <div class="actions">
            <a class="btn primary" href="#reel">Reel</a>
            <a class="btn" href="/tools/kalkulator/?t=metall">Kalkulieren</a>
            <a class="btn" href="/kontakt/?p=Metall&amp;v=Plakette">Anfragen</a>
          </div>
        </article>

        <!-- Typenschild -->
        <article class="productcard">
          <div class="thumb">
            <img class="variantImg" data-variant-img="1" alt="Metall Typenschild Beispiel" loading="lazy">
          </div>

          <div class="meta">
            <span class="price">ab 24,95 €</span> • <span>Typenschild</span> • <span>Industrie</span>
          </div>

          <h3>Typenschild</h3>
          <p class="kicker">Maschinen, Geräte, Werkstatt – klare Infos, gute Lesbarkeit.</p>

          <div class="actions">
            <a class="btn primary" href="#reel">Reel</a>
            <a class="btn" href="/tools/kalkulator/?t=metall">Kalkulieren</a>
            <a class="btn" href="/kontakt/?p=Metall&amp;v=Typenschild">Anfragen</a>
          </div>
        </article>

        <!-- Tags -->
        <article class="productcard">
          <div class="thumb">
            <img class="variantImg" data-variant-img="2" alt="Metall Tag Beispiel" loading="lazy">
          </div>

          <div class="meta">
            <span class="price">ab 9,95 €</span> • <span>Tags</span> • <span>Logo/Text</span>
          </div>

          <h3>Tags & Logos</h3>
          <p class="kicker">Schlüsselanhänger, Marken, Seriennummern – kleine Teile, großer Effekt.</p>

          <div class="actions">
            <a class="btn primary" href="#reel">Reel</a>
            <a class="btn" href="/tools/kalkulator/?t=metall">Kalkulieren</a>
            <a class="btn" href="/kontakt/?p=Metall&amp;v=Tags">Anfragen</a>
          </div>
        </article>
      </div>
    </section>

    <!-- REEL / FEED (INTERN, AUS JSON, AUTO) -->
    <section id="reel" class="section">
      <h2>Metall Reel</h2>
      <p class="muted">Läuft automatisch – du kannst jederzeit swipen/scrollen.</p>

      <div
        class="reel"
        aria-label="Metall Beispiele Reel"
        data-reel
        data-reel-src="/assets/reel-metall.json"
        data-interval="4500"
      ></div>

      <noscript>
        <p class="muted">Hinweis: Für den internen Reel muss JavaScript aktiv sein.</p>
      </noscript>

      <div class="actions" style="margin-top: 14px;">
        <a class="btn primary" href="/kontakt/?p=Metall">Metall anfragen</a>
        <a class="btn" href="/tools/kalkulator/?t=metall">Preis kalkulieren</a>
      </div>
    </section>
  </main>

  <!-- FOOTER: 1:1 aus index.html -->
  <footer>
    <div class="wrap foot">
      <div class="small">© <span id="y"></span> Luderbein</div>
      <div class="small">
        <a href="/rechtliches/impressum.html">Impressum</a> ·
        <a href="/rechtliches/datenschutz.html">Datenschutz</a>
      </div>
    </div>
  </footer>

  <script src="/assets/nav-dropdown.js"></script>
  <script src="/assets/site.js"></script>
  <script src="/assets/reel-internal.js"></script>

  <script>
    const y = document.getElementById("y");
    if (y) y.textContent = new Date().getFullYear();

    // Varianten-Thumbs: erste 3 Items aus reel-metall.json übernehmen
    (function () {
      const reduce = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
      // Thumbs dürfen auch bei reduced-motion geladen werden (nur Bilder), also KEIN return.

      const jsonUrl = "/assets/reel-metall.json";
      fetch(jsonUrl, { cache: "no-store" })
        .then(r => r.ok ? r.json() : Promise.reject(new Error("JSON not found")))
        .then(items => {
          const imgs = Array.from(document.querySelectorAll("[data-variant-img]"));
          imgs.forEach(img => {
            const idx = Number(img.getAttribute("data-variant-img"));
            const it = items && items[idx];
            if (!it || !it.src) return;

            img.src = it.src;
            if (it.alt) img.alt = it.alt;

            img.addEventListener("load", () => img.classList.add("is-ready"), { once: true });
          });
        })
        .catch(() => {
          // still ok: page works without thumbs
        });
    })();
  </script>
</body>
</html>
